@model _19T1021035.DomainModels.OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Order/UpdateDetail" method="post" class="form-horizontal">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.OrderDetailID)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            @Html.HiddenFor(m => m.ProductID)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            @Html.HiddenFor(m => m.OrderID)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            @Html.HiddenFor(m => m.ProductName)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            @Html.HiddenFor(m => m.Unit)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            @Html.HiddenFor(data => data.Photo)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.ProductName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.Unit</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Quantity,
                         new { @class = "form-control", @placeholder = "Nhập Số lượng", @autufocus = "autufocus" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.SalePrice,
                        new { @class = "form-control", @placeholder = "Nhập Giá bán", @autufocus = "autufocus" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

