@model _19T1021035.Web.Models.ProductSearchOutput

@{
    Layout = null;
}

<p style="margin:10px 0 10px 0">
    Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> bản ghi trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width:80px">Ảnh</th>
                <th>Tên mặt hàng</th>
                <th>Đơn vị tính</th>
                <th>Giá</th>
                <th style="width:75px">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
            <tr>
                @*<td><img src=@item.Photo style="width:80px" /></td>*@
                <td><img src="~/Photos/products/@item.Photo" style="width:80px" /></td>
                <td style="vertical-align:middle">@item.ProductName</td>
                <td style="vertical-align:middle">@item.Unit</td>
                <td style="vertical-align:middle">@item.Price</td>
                <td class="text-right">
                    <a href="~/product/Edit/@item.ProductID" class="btn btn-success" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-danger" title="Xóa"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>


    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a onclick="doSearch(@i)" href="javascript:">@i</a></li>
                }
            }
        </ul>
    </div>
</div>