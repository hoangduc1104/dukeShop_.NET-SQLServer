@model _19T1021035.DomainModels.ProductAttribute

@{
    ViewBag.Title = "Attribute";
}


<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post" >
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AttributeID)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            @Html.HiddenFor(m => m.ProductID)
            @Html.ValidationSummary("", new { @style = "coler:@f00" })
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeName,
                       new { @class = "form-control", @placeholder = "Nhập Phần mô tả", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeValue,
                        new { @class = "form-control", @placeholder = "Nhập Phần mô tả", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.DisplayOrder,
                        new { @class = "form-control", @placeholder = "Nhập Phần mô tả", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product/edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>




